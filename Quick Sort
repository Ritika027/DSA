#include <iostream>
using namespace std;
int main() {
    int t;
    cin >> t;
    while (t--) {
        string s;
        cin >> s;
        int count = 0;
        int first_one = -1, last_one = -1;
        for (int i = 0; i < s.length(); i++) {
            if (s[i] == '1') {
                if (first_one == -1) {
                    first_one = i;
                }
                last_one = i;
            }
        }
        for (int i = first_one; i <= last_one; i++) {
            if (s[i] == '0') {
                count++;
            }
        }
        cout << count << endl;
    }
    return 0;
}
